<div class="card">
  <div class="card-header">
    <div class="card-title">
      <a href="/movie/{{imdbID}}">{{Title}}</a>
    </div>
    <div class="card-subtitle">
      {{Year}}
    </div>
  </div>
  <div class="card-body">
    {{#if Poster}}
    <img src="{{Poster}}">
    {{/if}}
    <h6>Director: {{Director}}</h6>
    <h6>Actors: {{Actors}}</h6>
  </div>
  <div class="card-footer">
    <a href="#"></a>
  </div>
</div>