<div class="row">
  {{#each movies as |movie|}}
    <div class="col col-3">
      <div class="card">
        <div class="card-header">
          <div class="card-title">
            <a href="/search/id/{{id}}">{{movie_title}}</a>
          </div>
          <div class="card-subtitle">
            {{release_date}}
          </div>
        </div>
        <div class="card-body">
          {{#if movie_poster}}
            <img src="{{movie_poster}}" />
          {{/if}}
          <h6>Your Rating: {{Rating.user_rating}}</h6>
        </div>
        <div class="card-footer">
          <a href="#"></a>
        </div>
      </div>
    </div>
  {{/each}}
</div>